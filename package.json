{
  "name": "setup-sonar-scanner",
  "description": "GitHub Actions to setup Scanner CLI for SonarQube (Server, Cloud)",
  "version": "1.2.0",
  "author": "Dumas Sylvain",
  "type": "module",
  "private": true,
  "homepage": "https://github.com/actions/typescript-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SylvainDumas/setup-sonar-scanner.git"
  },
  "bugs": {
    "url": "https://github.com/SylvainDumas/setup-sonar-scanner/issues"
  },
  "keywords": [
    "actions",
    "github",
    "typescript",
    "sonarqube",
    "sonar-scanner"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "bundle:clean": "rm -fr dist/*",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "local-action": "npx @github/local-action . src/main.ts .env",
    "modules:clean": "rm -rf node_modules",
    "modules:upgrade": "npm run modules:clean && npx npm-check-updates --target minor -u --format group && npm install && npm audit fix",
    "modules:revert": "npm run modules:clean && git checkout package.json package-lock.json && npm install",
    "package": "npm run bundle:clean && npx rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "npm run package -- --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/tool-cache": "^4.0.0",
    "@types/semver": "^7.7.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.1",
    "@github/local-action": "^3.2.1",
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-commonjs": "^28.0.9",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.33",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^28.14.0",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^29.7.0",
    "nock": "^14.0.11",
    "prettier": "^3.8.1",
    "prettier-eslint": "^16.4.2",
    "rollup": "^4.57.1",
    "ts-jest": "^29.4.6",
    "ts-jest-resolver": "^2.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  },
  "overrides": {
    "glob": "^10.5.0"
  }
}
